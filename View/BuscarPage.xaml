<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IscaCar.View.BuscarPage"
             Title="BuscarPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker ItemsSource="{Binding LPob}"
                ItemDisplayBinding="{Binding Nombre}" 
                SelectedIndex="{Binding IndexPobSalida}" 
                SelectedItem="{Binding PobSalida}" 
                VerticalOptions="Center" HorizontalOptions="Center" />
            <Picker ItemsSource="{Binding LPob}"
                ItemDisplayBinding="{Binding Nombre}" 
                SelectedIndex="{Binding IndexPobLlegada}" 
                SelectedItem="{Binding PobLlegada}"
                VerticalOptions="Center" HorizontalOptions="Center" />
            <DatePicker Date="{Binding Data}" x:Name="DataFi" VerticalOptions="Center" HorizontalOptions="Center" />
            <Button Text="Buscar" Clicked="buscar" VerticalOptions="Center" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>