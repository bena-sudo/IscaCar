<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IscaCar.View.BuscarPage"
             Title="BuscarPage">
    <ContentPage.Content>
        <StackLayout>
            <ListView ItemsSource="{Binding LPobl}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding Nombre}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Picker ItemsSource="{Binding LPobl}"
                ItemDisplayBinding="{Binding Nombre}" 
                SelectedIndex="{Binding IndexPobSalida}" 
                SelectedItem="{Binding PobSalida}" />
            <Picker ItemsSource="{Binding LPobl}"
                ItemDisplayBinding="{Binding Nombre}" 
                SelectedIndex="{Binding IndexPobLlegada}" 
                SelectedItem="{Binding PobLlegada}" />
            <DatePicker Date="{Binding Data}" x:Name="DataFi" ></DatePicker>
            <Button Text="Buscar" Clicked="buscar" HorizontalOptions="Center" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>