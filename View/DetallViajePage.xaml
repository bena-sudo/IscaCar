<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IscaCar.View.DetallViajePage"
             Title="DetallViajePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Creador" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="{Binding Viaje.Usuario.Correo}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="¿Desde dónde sales?" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="{Binding Viaje.Origen.Nombre}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="¿A dónde vas?" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="{Binding Viaje.Destino.Nombre}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="¿Periodo de validez del viaje?" VerticalOptions="Center" HorizontalOptions="Center" />
            <DatePicker Date="{Binding Viaje.FechaInicio}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="¿Fin del periodo de validez del viaje?" VerticalOptions="Center" HorizontalOptions="Center" />
            <DatePicker Date="{Binding Viaje.FechaFin}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="¿Cuantas plazas tienes?" VerticalOptions="Center" HorizontalOptions="Center" />
            <Entry Text="{Binding Viaje.Plazas}" VerticalOptions="Center" HorizontalOptions="Center" />
            <Label Text="Observaciones" VerticalOptions="Center" HorizontalOptions="Center" />
            <Entry Text="{Binding Viaje.Observaciones}" VerticalOptions="Center" HorizontalOptions="Center" />
            <ListView ItemsSource="{Binding Viaje.LPob}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>

                            <Label  Text="{Binding Nombre}" 
                   Style="{DynamicResource ListItemTextStyle}" FontSize="12"/>


                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <ListView  ItemsSource="{Binding Viaje.DiasSetmana}" >
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Row="0" Grid.Column="0"  Text="{Binding Dia}" 
                   Style="{DynamicResource ListItemTextStyle}" FontSize="12"/>
                                <Label Grid.Row="0" Grid.Column="1"  Text="{Binding Salida}" 
                   Style="{DynamicResource ListItemTextStyle}" FontSize="12"/>
                                <Label  Grid.Row="0" Grid.Column="2" Text="{Binding Llegada}" 
                   Style="{DynamicResource ListItemTextStyle}" FontSize="12"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Cancelar" Clicked="btCancelar" HorizontalOptions="Center" />
            <Button Text="Borrar" Clicked="btBorrar" HorizontalOptions="Center" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>