<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IscaCar.View.InicioPage"
             Title="IscaCar">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="¿Como puedo iniciar sesio?"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Entry Text="Correo" HorizontalOptions="Fill" x:Name="correo"></Entry>
            <Entry Text="Password" HorizontalOptions="Fill" x:Name="password"></Entry>
            <Button Text="Iniciar" Clicked="iniciarSesion" HorizontalOptions="FillAndExpand"></Button>
            <Label Text="¿No tienes cuenta?"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />
            <Button Text="Registrarse" Clicked="registrarse" HorizontalOptions="FillAndExpand"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>